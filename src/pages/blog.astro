---
import Layout from "../layouts/Main.astro";
import Post from "../components/Post.astro";

const allPosts = Object.values(
	import.meta.glob("../pages/posts/*.md", { eager: true }),
);
---

<Layout heading="about me" title="blogblogblogblogblogblogblogblogblog">
	{
		allPosts.map((post: any) => <Post url={post.url} readtime={post.frontmatter.minutesread} title={post.frontmatter.title} subtitle={post.frontmatter.subtitle} date={() => {
			const temp = post.frontmatter.startdate?.slice(0,10);
			return temp;
		}} />)
	}
</Layout>

<style>
	.main {
		text-wrap: stable;
		text-align: center;
		align-items: center;
		padding: 0%;
		min-height: 100%;
		max-width: 90%;
	}
</style>
