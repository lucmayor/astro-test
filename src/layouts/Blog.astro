---
const { frontmatter } = Astro.props;
import "../styles/global.css";
---

<meta charset="utf-8" />

<div class="page">
    <div class="main">
        <div class="header">
            <h1>{frontmatter.title}</h1>
            <i>{frontmatter.subtitle}</i>
        </div>
        <slot />
    </div>
    <div class="spacelol">
        <a class="return" href="/blog">...back home</a>
    </div>
</div>

<style>
    * {
        color: white;
    }

    h1 {
        margin:0%;
    }

    .header {
        padding-bottom: 1vh;
        border-bottom: 1px dotted grey;
    }

    .spacelol {
        padding-left: 1vw;
        padding-top: 1vh;
    }

    .return {
        padding-left: 3px;
        max-height: min-content;
    }

    .page {
        display: flex;
    }

    .main {
        width: 60vw;
        height: 95vh;
        overflow-y: scroll;
        scrollbar-width: thin;
        scrollbar-width: darkgrey grey;
        border-right: 1px dotted white;
        padding-right: 3px;
        margin-left: 3vw
    }
</style>
